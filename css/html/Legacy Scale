import React, { useState, useMemo } from 'react';
import { 
  Users, 
  GraduationCap, 
  Building2, 
  Wrench, 
  Zap, 
  HeartPulse, 
  Globe,
  ArrowUpRight
} from 'lucide-react';

const App = () => {
  const [activeStudents, setActiveStudents] = useState(500); // Millions
  const [tuition, setTuition] = useState(25);
  const durationYears = 4;

  const stats = useMemo(() => {
    const annualRevenue = activeStudents * 1e6 * tuition * 12;
    const maintenance = 30e9;
    const annualSurplus = annualRevenue - maintenance;
    
    // 4-year cycle stats
    const graduatesPerYear = activeStudents / durationYears;
    const totalClassContribution = tuition * 12 * durationYears; // $1,200 per student total
    
    // Infrastructure built per "Class" (4 year window)
    const fourYearSurplus = annualSurplus * 4;
    const solarPerClass = (fourYearSurplus * 0.4) / 80e6; // $80M per sq km
    const medHubsPerClass = (fourYearSurplus * 0.3) / 15e6; // $15M per hub

    return { 
      annualSurplus, 
      graduatesPerYear, 
      totalClassContribution, 
      solarPerClass, 
      medHubsPerClass,
      annualRevenue 
    };
  }, [activeStudents, tuition]);

  return (
    <div className="min-h-screen bg-[#0a0a0c] text-slate-400 font-sans p-4 md:p-8">
      <div className="max-w-6xl mx-auto">
        {/* Header */}
        <header className="mb-12 flex flex-col md:flex-row md:items-end justify-between gap-6">
          <div>
            <div className="flex items-center gap-2 mb-2">
              <div className="w-2 h-2 rounded-full bg-emerald-500 animate-pulse" />
              <span className="text-[10px] font-black tracking-[0.3em] uppercase text-emerald-500">System Live: Class Legacy Model</span>
            </div>
            <h1 className="text-4xl font-black text-white tracking-tight">The 4-Year <span className="text-blue-500 text-italic">Impact</span></h1>
          </div>
          
          <div className="flex gap-4">
            <div className="bg-white/5 border border-white/10 rounded-xl p-4">
              <p className="text-[10px] font-bold uppercase mb-1">Cost to Student</p>
              <p className="text-2xl font-mono font-bold text-white">${stats.totalClassContribution}</p>
              <p className="text-[10px] text-slate-500">Total over 4 years</p>
            </div>
            <div className="bg-blue-600/10 border border-blue-500/20 rounded-xl p-4">
              <p className="text-[10px] font-bold uppercase text-blue-400 mb-1">Annual Surplus</p>
              <p className="text-2xl font-mono font-bold text-blue-400">${(stats.annualSurplus / 1e9).toFixed(1)}B</p>
              <p className="text-[10px] text-blue-500/60">Ready for allocation</p>
            </div>
          </div>
        </header>

        {/* Control Grid */}
        <div className="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
          <div className="space-y-6">
            <div>
              <div className="flex justify-between mb-4">
                <label className="text-xs font-bold text-slate-300 uppercase">Enrollment Capacity</label>
                <span className="text-blue-500 font-mono font-bold">{activeStudents} Million</span>
              </div>
              <input 
                type="range" min="100" max="1000" step="50" 
                value={activeStudents} 
                onChange={(e) => setActiveStudents(Number(e.target.value))}
                className="w-full h-1.5 bg-slate-800 rounded-lg appearance-none cursor-pointer accent-blue-500"
              />
            </div>
            <div className="grid grid-cols-2 gap-4">
              <div className="p-4 rounded-2xl bg-white/[0.02] border border-white/5">
                <Users className="text-slate-500 mb-2" size={18} />
                <p className="text-xl font-mono font-bold text-white">{stats.graduatesPerYear.toFixed(1)}M</p>
                <p className="text-[10px] uppercase font-bold tracking-wider">Annual Graduates</p>
              </div>
              <div className="p-4 rounded-2xl bg-white/[0.02] border border-white/5">
                <GraduationCap className="text-slate-500 mb-2" size={18} />
                <p className="text-xl font-mono font-bold text-white">4 Years</p>
                <p className="text-[10px] uppercase font-bold tracking-wider">Service Duration</p>
              </div>
            </div>
          </div>

          <div className="bg-gradient-to-br from-blue-600/20 to-transparent border border-blue-500/20 rounded-3xl p-8 relative overflow-hidden">
            <Building2 className="absolute -right-4 -bottom-4 text-blue-500/10" size={160} />
            <h3 className="text-white font-bold mb-4 flex items-center gap-2 uppercase tracking-widest text-xs">
              <Wrench size={14} /> The Graduation Gift
            </h3>
            <p className="text-slate-300 text-sm leading-relaxed mb-6">
              When a student graduates, they leave behind more than just their degree. Their 4-year tuition contribution, combined with the collective surplus, physically builds the infrastructure of their home region.
            </p>
            <div className="space-y-4">
              <div className="flex items-center justify-between">
                <span className="text-xs">Energy (Solar)</span>
                <span className="text-white font-mono font-bold">+{stats.solarPerClass.toLocaleString()} kmÂ²</span>
              </div>
              <div className="w-full h-1 bg-white/5 rounded-full overflow-hidden">
                <div className="h-full bg-blue-500" style={{width: '60%'}} />
              </div>
              <div className="flex items-center justify-between">
                <span className="text-xs">Medical (STEM Hubs)</span>
                <span className="text-white font-mono font-bold">+{stats.medHubsPerClass.toLocaleString()} Units</span>
              </div>
              <div className="w-full h-1 bg-white/5 rounded-full overflow-hidden">
                <div className="h-full bg-emerald-500" style={{width: '45%'}} />
              </div>
            </div>
          </div>
        </div>

        {/* Impact Map Preview */}
        <div className="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div className="p-6 rounded-2xl bg-[#111114] border border-white/5 group hover:border-blue-500/30 transition-colors">
            <Zap className="text-yellow-500 mb-4" />
            <h4 className="text-white font-bold mb-2">Infinite Energy</h4>
            <p className="text-xs leading-relaxed">By the time the first class of {stats.graduatesPerYear.toFixed(0)}M students graduates, we've installed enough solar to replace several coal plants permanently.</p>
          </div>
          <div className="p-6 rounded-2xl bg-[#111114] border border-white/5 group hover:border-emerald-500/30 transition-colors">
            <HeartPulse className="text-emerald-500 mb-4" />
            <h4 className="text-white font-bold mb-2">Health Saturation</h4>
            <p className="text-xs leading-relaxed">Graduates transition directly into the {stats.medHubsPerClass.toLocaleString()} new medical facilities built during their tenure.</p>
          </div>
          <div className="p-6 rounded-2xl bg-[#111114] border border-white/5 group hover:border-blue-400/30 transition-colors">
            <Globe className="text-blue-400 mb-4" />
            <h4 className="text-white font-bold mb-2">Zero Student Debt</h4>
            <p className="text-xs leading-relaxed">Total cost of $1,200 vs. average global STEM salary increase of 300%. The ROI is unmatched in history.</p>
          </div>
        </div>

        <footer className="mt-12 text-center border-t border-white/5 pt-8">
           <button className="bg-white text-black font-black px-8 py-3 rounded-full text-xs uppercase tracking-[0.2em] hover:bg-blue-500 hover:text-white transition-all flex items-center gap-3 mx-auto">
             Initialize Deployment <ArrowUpRight size={16} />
           </button>
        </footer>
      </div>
    </div>
  );
};

export default App;
