import React, { useState, useEffect } from 'react';
import { 
  Globe, 
  Cpu, 
  Layers, 
  Infinity as InfinityIcon, 
  ShieldCheck, 
  Radio, 
  Zap, 
  Network,
  Activity,
  Maximize2
} from 'lucide-react';

