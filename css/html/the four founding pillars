    {
      id: 'harmony',
      title: 'Harmony',
      partner: 'Meta / Reality Labs',
      desc: 'Spatial Fabric & Digital Access',
      icon: <InfinityIcon className="text-purple-400" />,
      color: 'from-purple-600/20 to-pink-500/20',
      borderColor: 'border-purple-500/40',
      status: 'RENDERING REALITY'
    },
    {
      id: 'becoming',
      title: 'Becoming',
      partner: 'NVIDIA / Omniverse',
      desc: 'The Forge of Compute & Evolution',
      icon: <Cpu className="text-green-400" />,
      color: 'from-green-600/20 to-lime-500/20',
      borderColor: 'border-green-500/40',
      status: 'FORGE ACTIVE'
    }
