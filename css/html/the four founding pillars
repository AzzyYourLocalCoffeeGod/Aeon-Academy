      desc: 'Knowledge Constructs & Logical Core',
      icon: <Layers className="text-emerald-400" />,
      color: 'from-emerald-600/20 to-teal-500/20',
      borderColor: 'border-emerald-500/40',
      status: 'VERIFIED SYNC'
