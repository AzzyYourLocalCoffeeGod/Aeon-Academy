import React, { useState, useMemo } from 'react';
import { 
  Zap, 
  Droplets, 
  Stethoscope, 
  Sprout, 
  TrendingUp, 
  ArrowRight,
  Calculator,
  Globe,
  Settings
} from 'lucide-react';

const App = () => {
  // Base Parameters
  const [tuition, setTuition] = useState(25);
  const [students, setStudents] = useState(500); // Millions
  const [maintenanceCost, setMaintenanceCost] = useState(30); // Billions
  
  // Cost estimates for Global Upgrades
  const COSTS = {
    SOLAR_PER_SQKM: 80e6, // $80M per sq km (industrial scale)
    DESAL_PLANT: 250e6,   // $250M per large-scale plant
    MED_HUB: 15e6,        // $15M per modular STEM-integrated clinic
    AGRI_DRONE_FLEET: 5e6 // $5M per regional fleet
  };

  const econ = useMemo(() => {
    const revenue = students * 1e6 * tuition * 12;
    const maintenance = maintenanceCost * 1e9;
    const surplus = revenue - maintenance;
    
    // Allocation Calculations
    const solarArea = (surplus * 0.4) / COSTS.SOLAR_PER_SQKM; // 40% to Energy
    const desalPlants = (surplus * 0.2) / COSTS.DESAL_PLANT;   // 20% to Water
    const medHubs = (surplus * 0.25) / COSTS.MED_HUB;        // 25% to Health
    const agriFleets = (surplus * 0.15) / COSTS.AGRI_DRONE_FLEET; // 15% to Food

    return { revenue, maintenance, surplus, solarArea, desalPlants, medHubs, agriFleets };
  }, [tuition, students, maintenanceCost]);

  const formatB = (val) => `$${(val / 1e9).toFixed(1)}B`;

  return (
    <div className="min-h-screen bg-[#050505] text-slate-300 font-sans selection:bg-blue-500/30">
      {/* Top Navigation / Status */}
      <nav className="border-b border-white/5 bg-black/50 backdrop-blur-md sticky top-0 z-10">
        <div className="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
          <div className="flex items-center gap-3">
            <div className="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center font-black text-white italic">Σ</div>
            <span className="font-bold tracking-tighter text-white text-xl">SURPLUS_ALLOCATOR</span>
          </div>
          <div className="flex items-center gap-6 text-[10px] font-mono font-bold uppercase tracking-widest text-slate-500">
            <span>Server Status: Optimal</span>
            <span className="text-emerald-500">Net Surplus: {formatB(econ.surplus)}</span>
          </div>
        </div>
      </nav>

      <main className="max-w-7xl mx-auto px-6 py-12">
        {/* Input Dashboard */}
        <div className="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
          <div className="bg-[#0f0f12] p-6 rounded-2xl border border-white/5">
            <label className="text-[10px] font-black text-slate-500 uppercase mb-4 block">Monthly Tuition</label>
            <div className="flex items-end gap-3">
              <span className="text-4xl font-mono font-bold text-white">${tuition}</span>
              <input 
                type="range" min="10" max="50" step="1" 
                value={tuition} 
                onChange={(e) => setTuition(Number(e.target.value))}
                className="flex-1 mb-2 accent-blue-600"
              />
            </div>
          </div>
          <div className="bg-[#0f0f12] p-6 rounded-2xl border border-white/5">
            <label className="text-[10px] font-black text-slate-500 uppercase mb-4 block">Active Students</label>
            <div className="flex items-end gap-3">
              <span className="text-4xl font-mono font-bold text-white">{students}M</span>
              <input 
                type="range" min="100" max="1000" step="50" 
                value={students} 
                onChange={(e) => setStudents(Number(e.target.value))}
                className="flex-1 mb-2 accent-emerald-600"
              />
            </div>
          </div>
          <div className="bg-blue-600 p-6 rounded-2xl flex flex-col justify-center">
            <p className="text-blue-100 text-xs font-bold uppercase mb-1">Total Yearly Revenue</p>
            <p className="text-4xl font-mono font-black text-white tracking-tighter">{formatB(econ.revenue)}</p>
          </div>
        </div>

        {/* Allocation Visualizer */}
        <h2 className="text-sm font-black text-white uppercase tracking-[0.2em] mb-8 flex items-center gap-4">
          <Settings size={16} /> 12-Month Deployment Projections
        </h2>

        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          
          {/* Energy Card */}
          <div className="bg-[#0f0f12] border border-white/5 rounded-3xl p-8 hover:border-yellow-500/20 transition-all group">
            <div className="w-12 h-12 bg-yellow-500/10 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
              <Zap className="text-yellow-500" />
            </div>
            <h3 className="text-white font-bold text-lg mb-2">Energy Infrastructure</h3>
            <p className="text-3xl font-mono font-black text-white mb-4">
              {econ.solarArea.toLocaleString(undefined, {maximumFractionDigits: 0})} <span className="text-sm text-slate-500">km²</span>
            </p>
            <p className="text-xs text-slate-500 leading-relaxed mb-6">
              Allocation of {formatB(econ.surplus * 0.4)} covers your goal of 250km² and beyond, effectively powering the grid for 50M homes yearly.
            </p>
            <div className="h-1 bg-slate-800 rounded-full overflow-hidden">
              <div className="h-full bg-yellow-500" style={{width: '40%'}}></div>
            </div>
          </div>

          {/* Water Card */}
          <div className="bg-[#0f0f12] border border-white/5 rounded-3xl p-8 hover:border-blue-500/20 transition-all group">
            <div className="w-12 h-12 bg-blue-500/10 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
              <Droplets className="text-blue-500" />
            </div>
            <h3 className="text-white font-bold text-lg mb-2">Water Autonomy</h3>
            <p className="text-3xl font-mono font-black text-white mb-4">
              {econ.desalPlants.toLocaleString(undefined, {maximumFractionDigits: 0})} <span className="text-sm text-slate-500">Plants</span>
            </p>
            <p className="text-xs text-slate-500 leading-relaxed mb-6">
              Industrial desalination and filtration hubs providing clean access for high-scarcity regions.
            </p>
            <div className="h-1 bg-slate-800 rounded-full overflow-hidden">
              <div className="h-full bg-blue-500" style={{width: '20%'}}></div>
            </div>
          </div>

          {/* Med Card */}
          <div className="bg-[#0f0f12] border border-white/5 rounded-3xl p-8 hover:border-rose-500/20 transition-all group">
            <div className="w-12 h-12 bg-rose-500/10 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
              <Stethoscope className="text-rose-500" />
            </div>
            <h3 className="text-white font-bold text-lg mb-2">Medical Hubs</h3>
            <p className="text-3xl font-mono font-black text-white mb-4">
              {econ.medHubs.toLocaleString(undefined, {maximumFractionDigits: 0})} <span className="text-sm text-slate-500">Units</span>
            </p>
            <p className="text-xs text-slate-500 leading-relaxed mb-6">
              Modular medical units equipped with AI-diagnostics and surgical robotics, staffed by Academy students.
            </p>
            <div className="h-1 bg-slate-800 rounded-full overflow-hidden">
              <div className="h-full bg-rose-500" style={{width: '25%'}}></div>
            </div>
          </div>

          {/* Agri Card */}
          <div className="bg-[#0f0f12] border border-white/5 rounded-3xl p-8 hover:border-emerald-500/20 transition-all group">
            <div className="w-12 h-12 bg-emerald-500/10 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
              <Sprout className="text-emerald-500" />
            </div>
            <h3 className="text-white font-bold text-lg mb-2">Food Security</h3>
            <p className="text-3xl font-mono font-black text-white mb-4">
              {econ.agriFleets.toLocaleString(undefined, {maximumFractionDigits: 0})} <span className="text-sm text-slate-500">Fleets</span>
            </p>
            <p className="text-xs text-slate-500 leading-relaxed mb-6">
              Precision agriculture drone fleets and automated hydroponic systems for localized food production.
            </p>
            <div className="h-1 bg-slate-800 rounded-full overflow-hidden">
              <div className="h-full bg-emerald-500" style={{width: '15%'}}></div>
            </div>
          </div>

        </div>

        {/* Closing Narrative */}
        <div className="mt-12 bg-white/[0.02] border border-white/5 rounded-3xl p-8 flex flex-col md:flex-row items-center gap-8">
          <div className="flex-1">
            <h4 className="text-white font-bold mb-2 flex items-center gap-2">
              <Globe size={18} className="text-blue-500" /> 
              The Perpetuity Cycle
            </h4>
            <p className="text-sm text-slate-400 leading-relaxed">
              Because the infrastructure is "Sunk Cost," every tuition dollar now acts as an engineering trigger. By Year 5, the system will have deployed over 1,500km² of solar and 40,000 medical hubs. We aren't just teaching STEM; we are using the tuition from teaching to physically build the world the students are learning to manage.
            </p>
          </div>
          <div className="bg-black/40 p-6 rounded-2xl border border-white/5 text-center min-w-[200px]">
             <p className="text-[10px] font-bold text-slate-500 uppercase mb-1">Total Surplus Managed</p>
             <p className="text-3xl font-mono font-black text-white tracking-tighter">{formatB(econ.surplus)}</p>
             <div className="mt-3 flex items-center justify-center gap-1 text-emerald-500 font-bold text-xs">
                <TrendingUp size={12} />
                <span>SELF-SUSTAINING</span>
             </div>
          </div>
        </div>
      </main>
    </div>
  );
};

export default App;
