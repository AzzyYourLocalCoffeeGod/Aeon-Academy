                <div className="bg-black/40 p-4 rounded-2xl border border-white/5">
                  <p className="text-[9px] text-slate-500 font-bold uppercase mb-1">Peer Likes</p>
                  <p className="text-xl font-black text-cyan-400">{scribeStats.totalLikes}</p>
                </div>
                <div className="bg-black/40 p-4 rounded-2xl border border-white/5">
                  <p className="text-[9px] text-slate-500 font-bold uppercase mb-1">Synergy Buff</p>
                  <p className="text-xl font-black text-emerald-400">+10%</p>
