      type: "Tool", 
      rarity: "Epic", 
      color: "from-purple-600 to-indigo-900", 
      req: "500 High-Quality Note Sharings",
      unlocked: true,
      effect: "Leaves a trailing stardust path in the air"
    },
    { 
      id: 2, 
      name: "Ancient Codicil", 
      type: "Textbook", 
      rarity: "Legendary", 
      color: "from-amber-400 to-orange-700", 
      req: "Maintain 95% Clarity Rating for 1 Semester",
      unlocked: false,
      effect: "Floating runic text orbit the book"
    },
    { 
      id: 3, 
      name: "Prism Glass Pen", 
      type: "Tool", 
      rarity: "Rare", 
      color: "from-cyan-400 to-blue-500", 
      req: "Top 10% Scribe in Class",
      unlocked: true,
      effect: "Changes color based on subject matter"
    },
    { 
      id: 4, 
      name: "Cyber-Grid Cover", 
      type: "Textbook", 
      rarity: "Common", 
