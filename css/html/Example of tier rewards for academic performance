                <div className="flex gap-4">
                  <button 
                    disabled={!selectedSkin.unlocked}
                    className={`px-8 py-3 rounded-2xl font-black text-xs uppercase tracking-widest transition-all ${selectedSkin.unlocked ? 'bg-white text-black hover:bg-indigo-400' : 'bg-slate-800 text-slate-500 cursor-not-allowed'}`}
                  >
                    {selectedSkin.unlocked ? 'Equip Skin' : 'Locked'}
                  </button>
