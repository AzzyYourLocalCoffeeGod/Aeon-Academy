import React, { useState } from 'react';
import { 
  PenTool, 
  BookOpen, 
  Award, 
  Sparkles, 
  Users, 
  ChevronRight, 
  Palette, 
  CheckCircle2,
  Lock,
  Search,
  Zap
} from 'lucide-react';

