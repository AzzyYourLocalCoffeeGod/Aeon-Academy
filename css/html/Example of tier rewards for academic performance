        <div>
          <div className="flex items-center gap-2 mb-2 text-indigo-400">
            <Sparkles size={18} />
            <span className="text-xs font-black uppercase tracking-[0.3em]">Scribe's Atelier</span>
          </div>
          <h1 className="text-4xl md:text-5xl font-black italic tracking-tighter">PRESTIGE REWARDS</h1>
        </div>
        
        <div className="flex gap-4">
          <div className="bg-white/5 border border-white/10 p-4 rounded-3xl flex items-center gap-4">
            <div className="w-12 h-12 rounded-2xl bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center shadow-lg shadow-indigo-500/20">
              <Award className="text-white" size={24} />
            </div>
            <div>
              <p className="text-[10px] text-slate-500 font-bold uppercase">Legacy Level</p>
              <p className="text-lg font-black text-white leading-none">LVL 42 MASTER</p>
            </div>
          </div>
        </div>
      </div>

